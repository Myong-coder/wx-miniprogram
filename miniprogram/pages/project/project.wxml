<!--pages/project/project.wxml-->
<van-divider />
  <view class="title">项目详情</view>
<van-divider />
<view>
  <view class="title">子任务安排</view>
</view>
<van-divider />
<form bindsubmit="onSubmit">
    <view class="addTask">
    <view>
      <input class="tasks"  name="title" placeholder="安排子任务吧..." bindinput="_handlerAddTask" value="{{ inputClear }}"></input>
      <icon type="{{ isBe?'success':'warn' }}"></icon>
    </view>
    <view class="status">
     <radio-group bindchange="_radioChange">
      <radio class="stat" value="执行" checked="{{ radioClear }}">执行</radio>
      <radio class="stat" value="等待" checked="{{ radioClear }}">等待</radio>
      <radio class="stat" value="未来" checked="{{ radioClear }}">未来</radio>
     </radio-group>
    </view>
    <view>
      <button class="addBtn" form-type="submit" disabled="{{ !(isBe && nowStatus)  }}">添加任务</button>
    </view>
  </view> 
</form>
<view class="progress">
  <view class="projectProgress">项目进度</view>
  <van-circle value="{{ progressSum }}" layer-color="#e0e0e0" size="200" text="已完成进度" />
</view>

